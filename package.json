{
  "name": "cra-electron",
  "version": "0.0.1",
  "description": "Create-react-app electron starter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fkhadra/cra-electron.git"
  },
  "author": "Fadi Khadra  <fdkhadra@gmail.com> (https://fkhadra.github.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fkhadra/cra-electron/issues"
  },
  "main": "public/electron.js",
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.5"
  },
  "scripts": {
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "start": "concurrently -k -p [{name}] -n 'ü¶Ñ React,‚≠êÔ∏è Electron' -c 'yellow,magenta' 'npm run start:react' 'wait-on http://localhost:3000/ && npm run start:electron'",
    "prettier": "prettier --single-quote --write '*/src/**/*.{js}'",
    "build:react": "react-scripts build",
    "build:electron": "cross-env NODE_ENV=production electron-builder",
    "build": "npm run build:react && npm run build:electron",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^9.4.0",
    "electron-builder": "^20.28.3",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "prettier": "^1.14.2",
    "wait-on": "^2.1.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.electron.foobar",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  }
}
